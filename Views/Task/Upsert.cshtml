@model TaskList

@{
    var aspAction = "Create";
    var buttonText = "Add Task";
    var title = "New Task";

    if (ViewBag.IsEditing == true) {
        aspAction = "Update";
        buttonText = "Update Task";
        title = "Update Task";
    }
}

<div>
    <h3 style="display:inline">@title</h3>
    <a class="btn btn-primary" asp-action="Index" style="float:right">Back</a>
</div>
<hr/>
<form asp-action="@aspAction">
    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name"/>
    </div>

    <div class="form-group">
        <label asp-for="TaskStartDate">Description</label>
        <input type="text" class="form-control" asp-for="TaskStartDate"/>
    </div>

    <div class="form-group">
        <label asp-for="TaskEndDate">Description</label>
        <input type="text" class="form-control" asp-for="TaskEndDate"/>
    </div>

    <button type="submit" class="btn btn-success">@buttonText</button>
</form>